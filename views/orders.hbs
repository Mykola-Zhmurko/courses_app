<h1 class="title">My Orders</h1>
{{#if orders.length}}
    {{#each orders}}
    <div class="columns">
        <div class="column is-half is-offset-one-quarter">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">
                        Order: <small>{{_id}}</small>
                    </span>
                    <p class="date">{{date}}</p>
                    <p><em>{{user.name}}</em>({{user.userId.email}})</p>

                    <ol>
                        {{#each courses}}
                            <li>
                                {{course.title}}(x<strong>{{count}}</strong>)
                            </li> 
                        {{/each}}
                    </ol>
                    <hr>

                    <p>The price: <span class="price">{{price}}</span></p>
                </div>
            </div>
        </div>
    </div>
    {{/each}}    
{{else}}
    <div class="has-text-centered">
        <h4>No orders yet</h4>
        <a href="/courses" class="button is-primary">Go to Courses</a>
    </div>
{{/if}}