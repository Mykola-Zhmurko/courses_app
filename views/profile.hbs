<h1 class="proh">PROFILE</h1>

<div class="columns">
  <div class="column is-half">
    {{#if user.avatarUrl}}
      <img 
        class="avatar"  
        src="/{{user.avatarUrl}}" 
        alt="avatar-{{user.name}}"
      >
      {{else}}
    <p class="has-text-grey">No image yet</p>
    {{/if}}
  </div>
    
  <div class="column is-half">
    <form action="/profile" method="POST" enctype="multipart/form-data">
      <p>Your email: <strong>{{user.email}}</strong></p>

      <div class="field">
        <label class="label" for="name">Your name:</label>
        <div class="control">
          <input id="name" name="name" class="input" type="text" required value="{{user.name}}">
        </div>
        <p class="help is-danger">The name can't be empty</p>   
      </div>

        <div class="file">
        <label class="file-label">
            <input class="file-input" type="file" name="avatar"/>
            <span class="file-cta">
            <span class="file-icon">
                <i class="fas fa-upload"></i>   
            </span>
            <span class="file-label"> Choose a fileâ€¦ </span>
            </span>
        </label>
        </div>

      <input type="hidden" name="_csrf" value="{{csrf}}">

      <div class="control">
        <button type="submit" class="button is-primary">Change</button>
      </div>
    </form>
  </div>
</div>